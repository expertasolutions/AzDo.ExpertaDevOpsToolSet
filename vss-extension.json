{
  "manifestVersion": 1,
  "id": "ExpertaDevOpsToolsSet",
  "name": "Experta DevOps Tools set package",
  "version": "__major__.__minor__.__patch__",
  "publisher": "experta",
  "targets": [
      {
          "id": "Microsoft.VisualStudio.Services"
      }
  ],    
  "description": "Experta Solutions DevOps Tasks tools set",
  "tags": [
    "Build",
    "Release",
    "Azure Pipelines",
    "macOS",
    "linux",
    "windows"
  ],
  "links":{
    "support": { 
        "uri": "https://github.com/expertasolutions/ExpertaDevOpsToolSet/issues"
    }
  },
  "repository": {
    "type" : "git",
    "uri" : "https://github.com/expertasolutions/ExpertaDevOpsToolSet"
  },
  "categories": [
      "Azure Pipelines"
  ],
  "icons": {
      "default": "icon.png"
  },
  "content": {
    "details": { "path": "README.md" },
    "license": { "path": "license" }
  },
  "preview":true,
  "files": [
      { "path": "BuildVersionExtractor" }
  ],
  "public": true,
  "contributions": [
      {
          "id": "custom-build-release-task",
          "type": "ms.vss-distributed-task.task",
          "targets": [
              "ms.vss-distributed-task.tasks"
          ],
          "properties": {
              "name": "BuildVersionExtractor"
          }
      }
  ]
}