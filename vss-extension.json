{
  "manifestVersion": 1,
  "id": "ExpertaDevOpsToolsSet",
  "name": "Experta DevOps Toolset",
  "version": "0.0.0",
  "publisher": "expertaPreview",
  "targets": [
      {
          "id": "Microsoft.VisualStudio.Services"
      }
  ],    
  "description": "Experta Solutions DevOps Tasks tools set",
  "tags": [
    "Build",
    "Release",
    "Azure Pipelines",
    "macOS",
    "linux",
    "windows"
  ],
  "links":{
    "support": { 
        "uri": "https://github.com/expertasolutions/ExpertaDevOpsToolSet/issues"
    }
  },
  "repository": {
    "type" : "git",
    "uri" : "https://github.com/expertasolutions/ExpertaDevOpsToolSet"
  },
  "categories": [
      "Azure Pipelines"
  ],
  "icons": {
      "default": "icon.png"
  },
  "content": {
    "details": { "path": "README.md" },
    "license": { "path": "license" }
  },
  "files": [
      { "path": "BuildVersionExtractor" },
      { "path": "ACRCredentials" },
      { "path": "ACRAKSAccess" },
      { "path": "AzureAppInsight" },
      { "path": "FileContentToBase64" },
      { "path": "ManageKeyVaultSecrets" }
  ],
  "contributions": [
      {
          "id": "custom-build-release-task",
          "type": "ms.vss-distributed-task.task",
          "targets": [
              "ms.vss-distributed-task.tasks"
          ],
          "properties": {
              "name": "BuildVersionExtractor"
          }
      },
      {
        "id": "acrcredentials-build-release-task",
        "type": "ms.vss-distributed-task.task",
        "targets": [
            "ms.vss-distributed-task.tasks"
        ],
        "properties": {
            "name": "acrcredentials"
        }
      },
      {
        "id": "acraksaccess-build-release-task",
        "type": "ms.vss-distributed-task.task",
        "targets": [
            "ms.vss-distributed-task.tasks"
        ],
        "properties": {
            "name": "acraksaccess"
        }
      },
      {
        "id": "azappinsight-build-release-task",
        "type": "ms.vss-distributed-task.task",
        "targets": [
            "ms.vss-distributed-task.tasks"
        ],
        "properties": {
            "name": "azureAppInsight"
        }
      },
      {
        "id": "filecontenttobase64-build-release-task",
        "type": "ms.vss-distributed-task.task",
        "targets": [
            "ms.vss-distributed-task.tasks"
        ],
        "properties": {
            "name": "fileContentToBase64"
        }
      },
      {
        "id": "managekeyvaultsecrets-build-release-task",
        "type": "ms.vss-distributed-task.task",
        "targets": [
            "ms.vss-distributed-task.tasks"
        ],
        "properties": {
            "name": "manageKeyVaultSecrets"
        }
      }
  ]
}